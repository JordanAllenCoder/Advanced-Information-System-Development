<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="row">
        <div class="col-sm-8">
            <div class="jumbotron">
                <p><%= locals.tagline %></p>
                <ul>
                    <% if (locals.airports) { %>

                        <% locals.airports.forEach(function(airport) { %>
                            <li>
                                <strong>Airport Code: <%= airport.airportcode %></strong>, Airport Name:
                                <%= airport.airportname %>, Country: <%= airport.country %>
                            </li>
                        <% }); %>
                    
                    <% } %>
                    
                </ul>
            </div>
        </div>

    <div class="col-sm-4">
        <div class="well">
            <h3>Delete an airport by entering the airportname below:</h3>
            
    <div class="col-sm-4">
        <div class="well">
                <div>
                    <form action="/process_form_del_airports" method="post">
                        <div class="form-group1">
                            <label for="deleteairportname" class="form-label"></label>
                            <input type="text" id="airportname1" name="airportname1" class="form-control" placeholder="airportname" 
                            autofocus>
                            <input class="btn btn-lg btn-primary btn-block" type="submit">
                        </div>

                    </form>
                </div>
        </div>
    </div>

</div>
</main>
